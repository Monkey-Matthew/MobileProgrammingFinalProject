<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/change_savegoal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@color/black"
    >

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="How are you Currently Saving?"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="50dp">

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/describeSavingsRadioGroup">

            <RadioButton android:id="@+id/agressive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Agressive"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:onClick="onRadioButtonClicked" />

            <RadioButton android:id="@+id/normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Normal"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:onClick="onRadioButtonClicked" />

            <RadioButton android:id="@+id/conservative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Conservative"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:onClick="onRadioButtonClicked" />

        </RadioGroup>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_apply_changes"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="140dp"
            android:text="Back" />


    </LinearLayout>



</LinearLayout>
